{
  "name": "Isomorphic Counter",
  "version": "1.0.0",
  "description": "",
  "main": "routes.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Francisco Ryan Tolmasky I",
  "license": "MIT",
  "engines": {
    "node": "8.x.x"
  },
  "isomorphic": {
    "public": {
        "/assets/*": ":asset-domain/assets/:name.bundle.js"
    },
    "entrypoints": {
      "/(*_/):name.js": {
        "output": "/assets/:name.bundle.js",
        "transform": "isomorphic-compile/bundle-js",
        "options": {
          "babel": {
            "presets": [
                ["isomorphic-preset", { "node":"4.x.x", "react": true }]
            ]
         }
        }
      },
      "/(*_/):name.less": {
        "output": "/assets/styles/:name.css",
        "transform": "isomorphic-less"
      }
    }
  },
  "dependencies": {
    "react": "^16.0.0"
  }
}
